---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Pricing Packages for Every Journey"
    subtitle="Choose the perfect plan that aligns with your goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    prices={[
      {
        title: 'Business Essentials',
        subtitle:
          'Designed for established businesses that need a professional online presence with minimal maintenance.',
        price: 3980,
        period: '+$25/month hosting',
        items: [
          {
            description: 'Custom-Tailored Design & Development',
          },
          {
            description: 'Managed Website Hosting & Security',
          },
          {
            description: '5 Page Setup',
          },
          {
            description: 'CRM & Email Automation Setup',
          },
          {
            description: 'Business Support & 24/7 Performance Monitoring',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
      {
        title: 'Monthly',
        subtitle: 'Perfect for businesses scaling operations, with continuous updates & hands-on support.',
        price: 495,
        period: '+150/Month',
        items: [
          {
            description: 'Design & Development',
          },
          {
            description: 'Managed Website Hosting & Security',
          },
          {
            description: '5 Page Setup',
          },
          {
            description: 'Unlimited Website Updates',
          },
          {
            description: 'Priority Business Support & 24/7 Performance Monitoring',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Enterprise',
        subtitle: 'Tailored for companies expanding operations, optimizing workflows, and driving revenue.',
        price: 12900,
        period: 'Starting Price',
        items: [
          {
            description: 'Custom E-Commerce & Online Service Platform.',
          },
          {
            description: 'Gap Analysis & ERP Implementation',
          },
          {
            description: 'Streamlined Workflows & Business Automation',
          },
          {
            description: 'Team Onboarding & Process Optimization',
          },
          {
            description: 'Advanced Business Insights & Optimization',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Essential tools included in the business essentials and enterprise plan to streamline operations and improve client interactions"
    columns={2}
    items={[
      {
        title: 'Mobile-First and Fully Responsive Design',
        description:
          'Your website adapts to all devices, ensuring clients can access your services easily from phones, tablets, or desktops.',
        icon: 'tabler:devices',
      },
      {
        title: 'Google Business Profile',
        description:
          'We help you optimize and configure your Google Business Profile, making it easier for customers to find and contact you.',
        icon: 'tabler:brand-google',
      },
      {
        title: 'Content Management System (CMS)',
        description:
          'Easily publish updates, articles, or announcements with a built-in blog to keep customers informed and improve search rankings through organic content.',
        icon: 'tabler:blockquote',
      },
      {
        title: 'Appointment/Service Booking System',
        description:
          'Allow clients to book appointments online, reducing administrative work and ensuring your calendar stays organized.',
        icon: 'tabler:calendar-pin',
      },
      {
        title: 'Client Relationship Management (CRM)',
        description:
          'Track customer interactions, automate follow-ups, and improve client retention with an integrated CRM solution.',
        icon: 'tabler:user-circle',
      },
      {
        title: 'Online Payment Processor Integration',
        description:
          'Secure and seamless online payments, allowing clients to pay for services upfront or on a subscription basis.',
        icon: 'tabler:credit-card',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey from plans to creativity"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Select a plan',
        icon: 'tabler:number-1',
      },
      {
        title: 'Get in touch',
        icon: 'tabler:number-2',
      },
      {
        title: 'Fill out the questionnaire',
        icon: 'tabler:number-3',
      },
      {
        title: 'Approve the design',
        icon: 'tabler:number-4',
      },
      {
        title: 'Get platform-specific training',
        icon: 'tabler:number-5',
      },
      {
        title: 'Launch your website',
        icon: 'tabler:number-6',
      },
      {
        title: 'Enjoy the results',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right plan is important, and we're here to answer your questions. If you have queries about our pricing options, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Do you offer refunds or a satisfaction guarantee?',
        description:
          "We offer a 100% satisfaction guarantee on the design of the website. If, after up to 5 rounds of revisions, we cannot land on a design you're happy with, we will refund 100% of your deposit.",
      },
      {
        title: 'Are there any long-term commitments or contracts?',
        description:
          'For monthly plans, there is a minimum 12-month commitment. If you choose to cancel before the contract term ends, you will be charged for the remaining duration of the agreement.',
      },
      {
        title: 'Who owns the website, content, and assets after project completion?',
        description:
          'Once the project is completed and all payments are made, you have full ownership of the website, content, and assets, including any and all licenses used in the project.',
      },
      {
        title: 'What happens if I need additional work beyond the initial scope?',
        description:
          'Any work beyond the agreed project scope will be billed at our hourly rate. This includes additional features, revisions beyond the 5 included rounds, or post-launch changes outside the scope of the package chosen.',
      },
      {
        title: 'How many design revisions are included in the pricing?',
        description:
          'Our pricing includes up to 5 rounds of design revisions. If additional revisions are needed beyond this, they will be billed at our hourly rate.',
      },
      {
        title: 'Can I provide my own design mockups or branding elements?',
        description:
          'Yes! If you have existing branding, we will incorporate it into the design to maintain consistency with your brand identity.',
      },
      {
        title: 'Will I get a chance to review the design before development begins?',
        description:
          'Yes, you will have the opportunity to review and approve the design before we proceed with development to ensure it aligns with your vision.',
      },
      {
        title: 'What will I need to provide to get started?',
        description:
          'To get started, we will need your branding guidelines, content, images, and any specific features or functionality you want to include on the website.',
      },
      {
        title: 'How long does it take to develop a website from start to finish?',
        description:
          'The timeline depends on the project scope, but most websites are completed within 4-8 weeks, including design and development.',
      },
      {
        title: 'Can I request additional features or integrations after launch?',
        description:
          'We offer ongoing support and can add new features or integrations as needed. Additional work will be quoted separately.',
      },
      {
        title: 'Do you provide training or documentation on how to update and manage the website?',
        description:
          'Training sessions and documentation are provided post-launch to help you confidently manage your website. Our team is also available for all business inquiries and support as part of your plan.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
        target: '_blank',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Create Your Ideal Site?<br class="block sm:hidden" />
    </Fragment>

    <Fragment slot="subtitle">
      Build a website that works as hard as you do with<br class="hidden md:inline" /> Impact Web Studio
    </Fragment>
  </CallToAction>
</Layout>
